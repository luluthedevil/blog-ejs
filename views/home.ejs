<%- include("partials/header"); -%>

    <h1>Home</h1>
    <p> <%= startingContent%> </p>

    <% posts.forEach((post) => { %> 
        <h2><a class="title-link" href="/posts/<%= post.title %>"><%= post.title %></a></h2>
        <p> 
            <%= post.content.substring(0, 100) + " ..." %>
            <a href="/posts/<%= post.title %>">Read more</a>
        </p>
    <% }) %> 

<%- include("partials/footer"); -%>
